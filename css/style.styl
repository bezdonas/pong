// Import Nib
@import 'nib/index'

// Resets
global-reset()
reset-html5()

/***
	Game block
***/

// Variables:

width = 400px
height = 600px
halfWidth = 200px
halfHeight = 300px

ballSize = 10px
padWidth = 100px
padHeight = 10px

borderColor = #ccc
ballColor = #000
padColor = #000

// Styles
.pong-game
	width width
	height height
	border 5px solid borderColor
	position absolute
	top 50%
	left 50%
	margin-top - halfHeight
	margin-left - halfWidth
	
	&_ball
		position absolute
		width ballSize
		height ballSize
		background ballColor

	&_pad-1, &_pad-2
		position absolute
		width padWidth
		height padHeight
		background padColor

	&_pad-1 
		bottom 0px

	&_pad-2
		top 0px

.log
	width 300px
	height 500px
	position absolute
	left 10px
	top 50%
	margin-top -250px
	border 2px solid #ccc
	overflow-y scroll